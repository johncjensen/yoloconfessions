<h1>Admin Area</h1>
<div class="row">
  <div class="col-md-6">
    <h3>
    Pending Approval
    </h3>
    <div class="list-group">
      <% @posts.each do |post| %>
      <a href="posts/<%= post.id %>" class="list-group-item">
      <h4 class="list-group-item-heading"><%= post.title %></h4>
      <p class="list-group-item-text"><%= post.body %></p>
      </a>
      <% end %>
    </div>
  </div>
  <div class="col-md-6">
    <h3>
    Info Panel
    </h3>
    <p>
    Content
    </p>
  </div>
</div>
