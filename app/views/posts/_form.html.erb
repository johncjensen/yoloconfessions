<div class="row-fluid">
  <div class="span12 well">
    <%= form_for(@post) do |f| %>
    <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title, :class => "form-control" %>
    </div>
    <br>
    <div class="field">
      <%= f.label :body %><br>
      <%= f.text_area :body, :class => "form-control" %>
    </div>
    <br>
    <% if current_user %>
    <div class="field">
      <%= f.radio_button :visible, "true" %>
      <%= f.label(:visible, "Visible") %>
      <%= f.radio_button(:visible, "false") %>
      <%= f.label(:visible, "Pending") %>
    </div>
    <% end %>
    <div class="field">
      <%= f.label :category %><br>
      <%= f.select :category, [ 'general', 'nightclub', 'workplace', 'school', 'relationships', 'hookups' ], :prompt => 'Select
      One' %>
    </div>
    <br>
    <% if current_user %>
    <% else %>
    <%= recaptcha_tags :public_key => ENV["RECAPTCHA_PUBLIC_KEY"], :display => { :theme => "white" } %>
    <% end %>
    <br >
    <div class="actions">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>
