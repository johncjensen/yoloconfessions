<p id="notice"><%= notice %></p>


<h1 class="post-title"><%= @post.title %></h1>
<em>Posted <%= time_ago_in_words(@post.created_at) %> ago</em>


<p class="post-body">
  <%= @post.body %>
</p>

<% if current_user %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<% end %>
