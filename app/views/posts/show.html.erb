<p id="notice"><%= notice %></p>

<%= content_for(:title, "#{@post.title} | YOLO Confessions") %>
<%= content_for(:description, "#{h truncate(@post.body, :length => 155)}") %>

<%= render 'layouts/sharebutton' %>

<h1 class="post-title"><%= @post.title %></h1>
<em class="post-created-time">Posted <%= time_ago_in_words(@post.updated_at) unless @post.updated_at.blank? %> ago</em>
<div class="share-button"></div>
<p class="post-body"><%= @post.body %></p>

<% if current_user %>
<p><hr><strong>Admin Info:</strong><br>
<%= @post.category %><br>
visible: <%= @post.visible %><br>
<%= link_to 'Edit', edit_post_path(@post) %></p>
<% end %>
